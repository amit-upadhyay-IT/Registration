<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ThemeLight" parent="carbon_Theme.Light.NoActionBar">
        <item name="colorAccent">@color/carbon_black</item>
    </style>

    <style name="PrimaryRed">
        <item name="colorPrimary">@color/carbon_red_400</item>
        <item name="colorPrimaryDark">@color/carbon_red_700</item>
    </style>

    <style name="AccentBlue">
        <item name="colorAccent">@color/carbon_blue_a200</item>
    </style>


</resources>
